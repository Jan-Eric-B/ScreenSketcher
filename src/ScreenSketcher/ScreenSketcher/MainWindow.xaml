<Window x:Class="ScreenSketcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenSketcher"
        mc:Ignorable="d"
        WindowStyle="None"
        Topmost="True"
        Visibility="Hidden"
        AllowsTransparency="True"
        Background="Transparent">
    <Window.Resources>
    </Window.Resources>
    <Grid>
        <Border x:Name="mainBorder" BorderBrush="Red" BorderThickness="2" Background="#01FFFFFF">
            <InkCanvas Name="drawingInkCanvas" Background="#01FFFFFF" Focusable="False" Cursor="Pen" />
        </Border>
    </Grid>
</Window>